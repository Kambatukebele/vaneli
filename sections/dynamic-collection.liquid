<div id="shop-the-latest" class="page-width-desktop">
  <h2 style="font-family:{{ settings.type_header_font.family }}" class="">
    {{ section.settings.dynamic_collection_text_id }}
  </h2>
  <div style="font-familly:{{ settings.type_body_font.family }}" class="buttons-container">
    {% if section.settings.collection != blank %}
      <button class="myclickableBtn active" data-collection-id="collection">
        {{ section.settings.collection | capitalize }}
      </button>
    {% endif %}
    {% if section.settings.collection_one != blank %}
      <button class="myclickableBtn" data-collection-id="collection_one">
        {{ section.settings.collection_one | capitalize }}
      </button>
    {% endif %}
    {% if section.settings.collection_two != blank %}
      <button class="myclickableBtn" data-collection-id="collection_two">
        {{ section.settings.collection_two | capitalize }}
      </button>
    {% endif %}
    {% if section.settings.collection_three != blank %}
      <button class="myclickableBtn" data-collection-id="collection_three">
        {{ section.settings.collection_three | capitalize }}
      </button>
    {% endif %}
    
    {% if section.settings.collection_four != blank %}
       <button class="myclickableBtn" data-collection-id="collection_four">
        {{ section.settings.collection_four | capitalize }}  
      </button>
    {% endif %}
    {% if section.settings.collection_five != blank %}
      <button class="myclickableBtn" data-collection-id="collection_five">Sets</button>
    {% endif %}    
  </div>

  <div style="font-familly:{{ settings.type_body_font.family }}; font-weight:700" id="collection-container" class="">
    <div id="product-grid" class="product-grid">
      <!-- Default collection products will load here -->
      {% if section.settings.collection != blank %}
        {% for product in section.settings.collection.products limit: section.settings.dynamic_collection_range_limit_id %}
          <div class="product-item">
            <a class="product-item-link" href="{{ product.url }}">
              <div class="product-image">
                <img src="{{ product.featured_image | img_url: '600x900_crop_center' }}" alt="{{ product.title }}">
              </div>
              <div class="product-collection-tag">
                <span>Limited edition</span>
                <span>New</span>
              </div>
              <div class="product__title-price_block">
                <h3 class="product-title">{{ product.title | truncate: 50, "..." }}</h3>
                <div class="product-price-block">
                  <p class="product-price">{{ product.price | money }}</p>
                  <p class="product-price-compare">{{ product.price | money }}</p>
                </div>
                <div class="product-variant-block">
                  <span class="product-variant product-variant-active"></span>
                  <span class="product-variant"></span>
                  <span class="product-variant"></span>
                  <span class="product-variant"></span>
                  <span class="product-variant"></span>
                  <span class="product-variant"></span>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
  #shop-the-latest{
    padding-top: {{ section.settings.dynamic_padding_top_id }}px;
    padding-bottom: {{ section.settings.dynamic_padding_bottom_id }}px;
  }
  #shop-the-latest h2{
    padding: 0px 20px;
  }
  
/* Styles for buttons and grid */
.myclickableBtn {
  border: none;
  padding: 10px 20px;
  margin: 8px;
  border-radius: 25px;
  background-color: #f3f3f3;
  font-size: 14px;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.myclickableBtn.active {
  background-color: #000;
  color: #fff;
}

.myclickableBtn:hover {
  background-color: #000;
  color: #fff;
}

.product-grid {
  display: grid;
  gap: 16px;
  grid-template-columns: repeat(2, 1fr);
}
.product-image{ 
  border-radius: 8px;
}
.product-image img{
  border-radius: 8px;
}
.product-item-link{
  text-decoration: none;
}
.product-collection-tag{
  display:flex;
  flex-direction:column;
  justify-content: flex-start;
  align-items:flex-start;
  gap:4px;
}
.product-collection-tag span{
  display:block;
  background-color: black;
  color:white;
  border-radius: 4px;
  font-size:12px;
  text-transform: uppercase;
  font-weight:500;
  padding: 3px 8px;
}


.product-item {
  text-align: center;
  background: #fff;
  padding: 1px;
  {% comment %} border-radius: 8px; {% endcomment %}
}

.product-image img {
  width: 100%;
  height: auto;
  aspect-ratio: 2 / 3;
  object-fit: cover;
  {% comment %} border-radius: 8px; {% endcomment %}
}

.product-title {
  margin: 8px 0;
  font-size: 16px;
  font-weight: 700;
  text-align:left;
  font-size:13px;
  line-height:1.5;
}
.product-price-block{
  display: flex;
  justify-content: flex-start;
  align-items:center;
  gap:10px
}
.product-price, .product-price-compare {
  
  font-size: 13px;
  
  margin:0px;
}
.product-price{
  color: #000;
  font-weight:600;
}
.product-price-compare{
  color:#303030;
  font-weight:400;
  text-decoration: line-through;
}
.product-variant-block{
  display: flex;
  justify-content:flex-start;
  gap:5px;
  align-items:center; 
  height:40px;
}
.product-variant{
  width: 18px;
  height: 18px;
  display:block;
  border-radius: 50%;
  background-color:red;
}
.product-variant-active{
  border: 2px solid black;
}

@media (min-width: 768px) {
  .product-grid {
    grid-template-columns: repeat(4, 1fr);
  }  
}
@media (min-width: 1024px) {
  .product-collection-tag{
    flex-direction:row;
  }
  #shop-the-latest h2{
    padding: 0px 0px;
  }
  
}

</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const buttons = document.querySelectorAll(".myclickableBtn");
  const collectionContainer = document.getElementById("product-grid");

  // Render products dynamically
  function renderProducts(productsHtml) {
    collectionContainer.innerHTML = productsHtml;
  }

  // Event listeners for buttons
  buttons.forEach((button) => {
    button.addEventListener("click", function () {
      // Remove active class from all buttons
      buttons.forEach((btn) => btn.classList.remove("active"));
      this.classList.add("active");

      // Fetch the correct products from the data attribute
      const collectionId = this.getAttribute("data-collection-id");
      const productsHtml = document.getElementById(collectionId).innerHTML;

      renderProducts(productsHtml);
    });
  });
});
</script>

